<div class="container mt-5">
  <% if(respone !== '') {%>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong><%= respone %> </strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
  <h1>Contact List</h1>
  <a href="/contact/add" class="btn btn-primary mt-3"
    ><i class="bi bi-person-plus-fill"></i> Tambah Data Contact
  </a>
  <div class="card shadow-sm p-3 mb-5 bg-body rounded mt-2">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (cont < 1) {%>
          <tr>
            <td colspan="4" class="text-center">data kosong</td>
          </tr>
          <% } else {%> <% for (let index=0; index < cont.length; index++) { %>
          <tr>
            <td scope="row"><%= index+1 %></td>
            <td><%=cont[index].name %></td>
            <td><%=cont[index].email %></td>
            <td>
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a
                  href="contact/<%=cont[index].name %>"
                  class="btn btn-success"
                >
                  <i class="bi bi-person-lines-fill"></i>
                  Detail
                </a>
                <a
                  href="/update/<%=cont[index].name %>"
                  class="btn btn-warning"
                >
                  <i class="bi bi-pencil-square"></i> Update
                </a>
                <a
                  href="/delete/<%=cont[index].name %>"
                  onclick="return confirm('yakin?')"
                  class="btn btn-danger"
                >
                  <i class="bi bi-trash-fill"></i>
                  Delete
                </a>
              </div>
            </td>
          </tr>
          <% } %> <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>
